{
  "analysis": {
    "tokenizer": {
      "nori_user_dict": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed",
        "user_dictionary": "user_dictionary.txt"
      }
    },
    "filter": {
      "korean_stop": {
        "type": "stop",
        "stopwords_path": "stopwords.txt"
      },
      "synonym_filter": {
        "type": "synonym",
        "synonyms_path": "synonym.txt",
        "updateable": true
      }
    },
    "analyzer": {
      "korean_analyzer": {
        "type": "custom",
        "tokenizer": "nori_user_dict",
        "filter": [
          "lowercase",
          "nori_part_of_speech",
          "korean_stop",
          "synonym_filter"
        ]
      }
    }
  }
}
